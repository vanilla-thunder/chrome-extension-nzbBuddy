{
  "manifest_version": 2,
  "name": "nzbBuddy",
  "version": "0.0.6",
  "description": "Chrome extension for Sabnzbd or Nzbget",
  "minimum_chrome_version": "23.0",
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icons/nzb_off.png",
    "name": "nzbBuddy"
  },
  "web_accessible_resources": [
    "js/jquery.slim.min.js"
  ],
  "permissions": [
    "*://*/*",
    "tabs",
    "commands",
    "contextMenus",
    "notifications",
    "storage"
  ],
  "commands": {
    "process-usenet-search": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Process useent search"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdnjs.cloudflare.com/; object-src 'self'"
}
