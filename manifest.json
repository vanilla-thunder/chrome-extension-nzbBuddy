{
  "manifest_version": 2,
  "name": "nzbBuddy",
  "version": "0.2.0",
  "description": "Chrome extension for processing nzblnk",
  "minimum_chrome_version": "45.0",
  "background": {
    "scripts": [
      "assets/jquery.min.js",
      "assets/background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icons/nzb_off.png",
    "name": "nzbBuddy"
  },
  "web_accessible_resources": [
    "assets/jquery.min.js",
    "assets/toastr.min.js",
    "assets/toastr.min.css"
  ],
  "permissions": [
    "*://*/*",
    "contextMenus",
    "notifications",
    "storage",
    "tabs",
    "ttsEngine"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
